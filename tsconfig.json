{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "js",
    "sourceMap": true,
    "baseUrl": "ts",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6"],
    "types": ["reflect-metadata"],
    "declaration": true
  },
  "include": [
    "ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "js"
  ]
}
